<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UceMap" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary branding color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary branding color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Theme.UceMap.Light" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">#15274F</item>
        <item name="colorPrimaryVariant">#264A6C</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <!-- Secondary branding color. -->
        <item name="colorSecondary">#0C7A91</item>
        <item name="colorSecondaryVariant">#00A8CD</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <!-- Background color. -->
        <item name="android:colorBackground">#FFFFFF</item>
        <!-- Button colors.
        <item name="android:backgroundTint">#00A8CD</item>-->
        <item name="android:textColor">@color/black</item>
        <!-- New colors. -->

        <!-- Customize your theme here. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

</resources>