<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoDos"
    android:clipToPadding="false"
    android:gravity="center">

    <ImageView
        android:id="@+id/splash_logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/splash_logo_desc"
        android:src="@drawable/uno" />

    <TextView
        android:id="@+id/splash_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/splash_logo"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/outfit_extrabold"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="44sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splash_text"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="26dp"
        android:fontFamily="@font/outfit"
        android:text="Â¡Bienvenidos!"
        android:textAlignment="center"
        android:textColor="#333"
        android:textSize="34sp" />
</RelativeLayout>